.main
  %section.main__block
    .header
      .header__logo
        =link_to image_tag('logo.png',class: "header__logo__image"), root_path
  .purchase
    .purchase__attention
      %i.far.fa-clock
      発送をお待ちください
    .purchase__box
      .purchase__heading
        .purchase__heading__text
          購入が完了しました
      %hr
      .purchase__item
        .purchase__item__photo
          = image_tag "#{@item.images[0].url}", size: '64x64', class: 'buydetails-contet__image'
        .purchase__item__info
          .name
            = @item.name
          .price
            %span 
              = "¥#{@item.price.to_s}"
              %span
                .shipping-free (税込) 送料込み
      %hr
      .purchase__payment
        .purchase__payment__text
          支払金額
        .totalMoney
          = "¥#{@item.price.to_s}"
      %hr
        .purchase__dicision
          = link_to 'トップページへ戻る', root_path, class: "purchase__dicision__btn"