.payment
  .payment__content
    .payment__content__head
      .payment__content__head__title
        カード情報の入力
      
    .payment__content__form
      .payment__content__form__container
        .payment__content__form__container__content
          .cardNumber
            .cardNumber__heading
              カード番号
              %span.cardNumber__heading__require
                必須
            .cardNumber__content
              #number-form.payjs-outer.cardNumber__content__box
              %img.cardLogos{:alt => "visa card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/visa-91c71914c6ae23d33f896e60bb1e3859.svg"}/
              %img.cardLogos{:alt => "mastercard", :src => "https://web-jp-assets.mercdn.net/_next/static/images/mastercard-8b5b68c12b7a2fc8619c71f49ef9209b.svg"}/
              %img.cardLogos{:alt => "saison card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/saison-550107415f39b81fa19e87c96486ba20.svg"}/
              %img.cardLogos{:alt => "jcb card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/jcb-9ea981d20008c6545aa3afd1b3da9804.svg"}/
              %img.cardLogos{:alt => "dinersclub card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/american_express-4df44c450653b0209850070ea5cf1264.svg"}/
              %img.cardLogos{:alt => "express card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/dinersclub-3d52fbb4b39dc998f039571f3314bfc7.svg"}/
              %img.cardLogos{:alt => "discover card", :src => "https://web-jp-assets.mercdn.net/_next/static/images/discover-879b0b1c9f9a30159f09e9ef492ad349.svg"}/
          .cardExpirationDate
            .cardExpirationDate__head
              有効期限
              %span.cardExpirationDate__head__require
                必須
            #expiry-form.payjs-outer.cardExpirationDate__form
            
            .cardExpirationDate__security
              .cardExpirationDate__security__head
                セキュリティコード
                %span.cardExpirationDate__security__head__require
                  必須
              .cardExpirationDate__security__content
                #cvc-form.payjs-outer.cardExpirationDate__security__content__box
                  
                .cardExpirationDate__security__content__help
                  = link_to "カード裏面の番号とは？", "#",class: "helpLink"
                  = form_with url: pay_credit_cards_path, method: :post,id: "card_form" do |f|
                    #card_token
                    = f.submit "登録する", class:"cardExpirationDate__security__content__addNewCardBtn", id: "info_submit"
          
                = link_to "もどる", user_path(current_user), method: :get, class: "cardExpirationDate__security__content__backBtn"
  = render "users/user-navi"
= render "home/purchaseBtn"

