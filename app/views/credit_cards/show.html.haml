.payment
  .payment__content
    .payment__content__head
      .payment__content__head__title
        支払い方法
    .payment__content__form
      .payment__content__form__container
        .payment__content__form__container__content
          .creditShow
            .creditShow__title
              %label 登録クレジットカード情報
            .registrationCard
              .creditcard-info
                = image_tag "#{@card_image}",width:'34',height:'20', alt:'master-card', class: "cardLogo"
              .registrationCard__number
                ="**** **** **** " + @default_card_information.last4
                .registrationCard__date
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = "有効期限" + exp_month + " / " + exp_year
            
              = form_tag(delete_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                %input{ type: "hidden", name: "card_id", value: "" }
                %button 削除する
      
  = render "users/user-navi"
=render "home/purchaseBtn"

